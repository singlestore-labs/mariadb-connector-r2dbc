<configuration>

    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>%d{yyyy-MM-dd} | %d{HH:mm:ss.SSS} | %-20.20thread | %5p | %logger{25} | %m%n
            </pattern>
        </encoder>
    </appender>

    <logger level="TRACE" name="org.mariadb.r2dbc"/>
    <logger level="TRACE" name="io.netty.buffer"/>
    <logger level="TRACE" name="reactor.ipc.netty"/>

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
